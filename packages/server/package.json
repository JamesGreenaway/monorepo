{
	"name": "@monorepo/server",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"dev": "nodemon",
		"execute": "node dist/server.js",
		"clean": "rimraf dist",
		"compile": "swc ./src -d dist --include-dotfiles --copy-files -s",
		"build": "npm run clean && npm run compile && npm run execute",
		"test": "mocha --config .mocharc.json"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.2.174",
		"@types/chai": "^4.3.1",
		"@types/express": "^4.17.13",
		"@types/lodash": "^4.14.182",
		"@types/mocha": "^9.1.1",
		"chai": "^4.3.6",
		"eslint": "^8.14.0",
		"mocha": "^10.0.0",
		"nodemon": "^2.0.16",
		"rimraf": "^3.0.2",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.4"
	},
	"dependencies": {
		"express": "^4.18.1",
		"lodash": "^4.17.21"
	},
	"nodemonConfig": {
		"exec": "npm run build",
		"ext": "ts,tsx,js,json",
		"watch": [
			"./src/**/*"
		]
	}
}
