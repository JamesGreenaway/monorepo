{
	"name": "server",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"start": "nodemon",
		"execute": "node dist/server.js",
		"clean": "rimraf dist",
		"compile": "npx swc ./src -d dist --include-dotfiles --copy-files -s",
		"build": "npm run clean && npm run compile && npm run execute",
		"format": "prettier --config ../.prettierrc 'src/**/*.+(ts|tsx|json|css|md)' --write",
		"lint": "eslint --ext .tsx,.ts -c ../.eslintrc.json src/"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run prettier:format && npm run lint"
		}
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.2.174",
		"@types/express": "^4.17.13",
		"@types/lodash": "^4.14.182",
		"client": "^0.1.0",
		"eslint": "^8.14.0",
		"husky": "^7.0.4",
		"nodemon": "^2.0.16",
		"rimraf": "^3.0.2",
		"server": "^1.0.0",
		"typescript": "^4.6.4"
	},
	"dependencies": {
		"express": "^4.18.1",
		"lodash": "^4.17.21"
	},
	"nodemonConfig": {
		"exec": "npm run build",
		"ext": "ts,tsx,js,json",
		"watch": [
			"./src/**/*"
		]
	}
}
